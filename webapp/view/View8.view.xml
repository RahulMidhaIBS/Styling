<mvc:View controllerName="CSS_Assignment.CSS_Assignment.controller.View8" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Table id = "idTable" items = "{path : 'empdetails>/Employee'}">
							<columns>
								<Column hAlign="Center" minScreenWidth="Tablet" demandPopin="true" width="15%">
									<Text text = "Name" class = "txtgrp1"></Text>
								</Column>
								<Column hAlign="Center" minScreenWidth="Tablet" demandPopin="true" width="15%">
									<Text text = "Age" class = "txtgrp1"></Text>
								</Column>
								<Column hAlign="Center" minScreenWidth="Tablet" demandPopin="true" width="15%">
									<Text text = "Organisation" class = "txtgrp1"></Text>
								</Column>
								<Column hAlign="Center" minScreenWidth="Tablet" demandPopin="true" width="15%">
									<Text text = "Domain" class = "txtgrp1"></Text>
								</Column>
								<Column hAlign="Center" minScreenWidth="Tablet" demandPopin="true" width="15%">
									<Text text = "Date" class = "txtgrp1"></Text>
								</Column>
							</columns>
							
							<items>
								<ColumnListItem>
									<cells>
										<Text wrapping = "true" text = "{empdetails>name}" class = "txtgrp2"></Text>
									</cells>
									<cells>
										<Text wrapping = "true" text = "{empdetails>age}" class = "txtgrp2"></Text>
									</cells>
									<cells>
										<Text wrapping = "true" text = "{empdetails>org}" class = "txtgrp2"></Text>
									</cells>
									<cells>
										<Text wrapping = "true" text = "{empdetails>dom}" class = "txtgrp2"></Text>
									</cells>
									<cells>
										<Text wrapping = "true" text = "{empdetails>date, formatter : '.test.fDate'}" class = "txtgrp2"></Text>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>